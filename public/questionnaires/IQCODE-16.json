{
    "questionnaire": {
        "id": "IQCODE-16",
        "name": "Informant Questionnaire on Cognitive Decline in the Elderly (Short Form)",
        "description": "An informant-based questionnaire assessing cognitive decline over the past 10 years across daily activities and memory functions.",
        "num_items": 16,
        "respondent": "Informant (family member, caregiver, or close acquaintance)",
        "instructions": "For each question, rate how the person has changed compared to 10 years ago. Select from the options below.",
        "scale": {
            "type": "likert",
            "options": [
                {
                    "value": 1,
                    "label": "Much improved"
                },
                {
                    "value": 2,
                    "label": "A bit improved"
                },
                {
                    "value": 3,
                    "label": "Not much change"
                },
                {
                    "value": 4,
                    "label": "A bit worse"
                },
                {
                    "value": 5,
                    "label": "Much worse"
                }
            ]
        },
        "questions": [
            {
                "id": "Q1",
                "text": "Remembering things that happened recently (e.g., recent conversations, recent events)"
            },
            {
                "id": "Q2",
                "text": "Remembering things that happened a long time ago"
            },
            {
                "id": "Q3",
                "text": "Remembering the names of family members and close friends"
            },
            {
                "id": "Q4",
                "text": "Remembering where things are usually kept"
            },
            {
                "id": "Q5",
                "text": "Remembering new information (e.g., learning how to use something new)"
            },
            {
                "id": "Q6",
                "text": "Handling money for everyday purchases"
            },
            {
                "id": "Q7",
                "text": "Handling financial matters or business affairs"
            },
            {
                "id": "Q8",
                "text": "Using household appliances (e.g., microwave, washing machine)"
            },
            {
                "id": "Q9",
                "text": "Remembering appointments or commitments"
            },
            {
                "id": "Q10",
                "text": "Finding their way around familiar streets or locations"
            },
            {
                "id": "Q11",
                "text": "Finding their way around unfamiliar streets or locations"
            },
            {
                "id": "Q12",
                "text": "Recognizing faces of people they see regularly"
            },
            {
                "id": "Q13",
                "text": "Following a story in a book or on television"
            },
            {
                "id": "Q14",
                "text": "Understanding spoken conversations"
            },
            {
                "id": "Q15",
                "text": "Making decisions in everyday life"
            },
            {
                "id": "Q16",
                "text": "Overall ability to remember things in daily life"
            }
        ],
        "scoring": {
            "method": "mean",
            "range": [
                1,
                5
            ],
            "interpretation": [
                {
                    "min": 1.0,
                    "max": 3.30,
                    "label": "No significant cognitive decline"
                },
                {
                    "min": 3.31,
                    "max": 3.69,
                    "label": "Mild cognitive decline (possible MCI)"
                },
                {
                    "min": 3.70,
                    "max": 5.0,
                    "label": "Significant decline (possible dementia)"
                }
            ]
        }
    }
}